{
  "name": "exothermicjs",
  "version": "1.2.2",
  "author": "Matt Suhay <matthew.suhay@gmail.com>",
  "keywords": [
    "react",
    "yaml",
    "front end"
  ],
  "bin": {
    "exothermic-server": "./bin/exothermic-server"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "connect-ensure-login": "^0.1.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.12.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "query-string": "^6.2.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-markdown": "^3.6.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-hash-link": "^1.2.0",
    "serve-favicon": "^2.5.0",
    "statable": "^0.3.2",
    "url-parse": "^1.4.3"
  },
  "jest": {
    "testRegex": "/.*(__tests__\\/.*)|(.*(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "node_modules",
      ".cache",
      "__snapshots__",
      "public",
      "dist"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "Components(.*)$": "<rootDir>/src/components/$1",
      "Modules(.*)$": "<rootDir>/src/components/$1",
      "Root(.*)$": "<rootDir>/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageDirectory": "./demo/coverage"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "nodemon-webpack-plugin": "^4.0.3",
    "style-loader": "^0.23.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "up": "yarn install",
    "start": "node ./bin/exothermic-server",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:all": "yarn build && yarn build:prod",
    "build:deploy": "yarn build:deploy:dev && yarn build:deploy:prod",
    "build:deploy:dev": "webpack --mode development --deploy",
    "build:deploy:prod": "webpack --mode production --deploy",
    "test": "jest",
    "stat": "webpack --mode production --profile --json > stats.json",
    "test:coverage": "jest --coverage",
    "eject": "react-scripts eject",
    "dev": "webpack --env.NODE_ENV=development --watch --mode development"
  },
  "description": "ExothermicJS | Yaml based templating for ReactJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suhay/exothermicjs.git"
  },
  "license": "MIT",
  "module": "index.js",
  "bugs": {
    "url": "https://github.com/suhay/exothermicjs/issues"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/react",
          "@babel/preset-env"
        ]
      }
    }
  },
  "homepage": "https://github.com/suhay/exothermicjs#readme"
}
