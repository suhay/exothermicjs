{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "./dist/types.d.ts"
  },
  "include": [
    "./src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "out",
    "tests"
  ]
}