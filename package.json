{
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "start": "NODE_ENV=production ./node_modules/.bin/exothermic-server",
    "watch": "lerna run watch --parallel",
    "dev": "run-p dev:server watch",
    "dev:server": "./node_modules/.bin/exothermic-server-dev",
    "debug": "run-p debug:server watch",
    "debug:server": "./node_modules/.bin/exothermic-server-dev --debug",
    "debug:test": "NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "build": "yarn clean && lerna run build -- --colors --hide-modules",
    "build:prod": "yarn clean && lerna run build:prod",
    "build:all": "yarn clean && lerna run build:all",
    "build-preview": "yarn build && lerna run build-preview",
    "clean": "rimraf packages/*/dist",
    "reset": "rimraf packages/*/node_modules && yarn clean && rm -rf node_modules",
    "test": "NODE_ENV=test jest --no-cache",
    "publish": "npm run publish:version && npm run publish:push",
    "publish:version": "lerna version --no-push --yes",
    "publish:push": "lerna publish from-git --yes",
    "publish:git": "git push --follow-tags",
    "publish:dry-run": "lerna version --no-git-tag-version --no-push",
    "lint": "eslint --fix ./"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.1.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/plugin-transform-react-jsx-self": "^7.0.0",
    "@babel/plugin-transform-react-jsx-source": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "ajv": "^6.5.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "core-js": "3",
    "css-loader": "^2.1.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.15.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.18.0",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.5.1",
    "webpack-node-externals": "^1.6.0",
    "yarn-run-all": "^3.1.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "version": "1.4.0",
  "resolutions": {
    "**/react": "^16.8.6",
    "**/react-dom": "^16.8.6"
  },
  "name": "exothermicjs",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
