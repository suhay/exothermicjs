{
  "scripts": {
    "dev": "yarn workspaces foreach --topological-dev run clean; yarn workspaces foreach --topological-dev run build:dev && run-p watch serve",
    "watch": "yarn workspaces foreach --topological-dev run watch",
    "serve": "live-server public --host=localhost --wait=1000 --mount=/:packages/core/dist --mount=/:packages/plugin-blog/dist --mount=/:packages/plugin-appwrite/dist --entry-file=index.html",
    "serve:demo": "live-server demo --wait=1000 --mount=/:packages/core/dist --mount=/:packages/plugin-blog/dist --mount=/:packages/plugin-appwrite/dist",
    "debug:test": "NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "build": "yarn lint && yarn workspaces foreach --topological-dev run build",
    "clean": "rimraf packages/*/dist; rimraf packages/*/out",
    "reset": "rimraf packages/*/node_modules; yarn clean; rm -rf node_modules",
    "test": "NODE_ENV=test jest --no-cache",
    "publish:push": "yarn build && lerna version && lerna publish from-package",
    "publish:dry-run": "lerna version --no-git-tag-version --no-push",
    "lint": "eslint ./",
    "compile": "tsc --build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "version": "2.1.1",
  "name": "exothermicjs",
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "packageManager": "yarn@3.2.1",
  "sideEffects": false
}