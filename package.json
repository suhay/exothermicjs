    "jest": "^23.6.0",
    "nodemon-webpack-plugin": "^4.0.3",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "start": "node ./dist/exothermic.js",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:all": "npm run build && npm run build:prod",
