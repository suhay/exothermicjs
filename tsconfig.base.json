{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "paths": {
      "core": ["packages/core/src"],
      "lib-material": ["packages/lib-material/src"],
      "lib-slate": ["packages/lib-slate/src"],
      "plugin-appwrite": ["packages/plugin-appwrite/src"],
      "plugin-blog": ["packages/plugin-blog/src"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": ["node", "jest"],
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*/dist",
    "**/*/out",
    "**/webpack.*",
    "src/**/*.d.ts",
    "**/*/scripts"
  ]
}
